# NextGenRail Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=your-secure-password-here
MONGODB_DATABASE=nextgenrail

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-256-bits-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (for OTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# API Configuration
API_BASE_URL=http://localhost:8080/api
WS_URL=ws://localhost:8080/api/ws

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Application Configuration
APP_NAME=NextGenRail
APP_VERSION=1.0.0
APP_DESCRIPTION=Production-grade IRCTC clone

# Security Configuration (Production)
SPRING_SECURITY_REQUIRE_SSL=false
SPRING_SECURITY_CSRF_ENABLED=true

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_NEXTGENRAIL=DEBUG

# Performance Configuration
SPRING_JPA_SHOW_SQL=false
SPRING_CACHE_TYPE=caffeine

# Render Deployment (Production)
RENDER_EXTERNAL_URL=https://your-app.onrender.com
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/nextgenrail

# Development Settings (for docker-compose.dev.yml)
DEV_MODE=true
ENABLE_DEBUG_LOGGING=true

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_REDIS_CACHE=false