# Development Environment Configuration
# Copy this file to application-dev.yml and update with your actual values

spring:
  data:
    mongodb:
      uri: mongodb://localhost:27017/nextgenrail_dev
  
  # Mail Configuration for Development
  mail:
    host: smtp.gmail.com
    port: 587
    username: your-email@gmail.com
    password: your-app-password
    
# JWT Configuration - Use a strong secret in production
jwt:
  secret: dev-secret-key-change-this-in-production-123456789012345678901234567890
  expiration: 86400000 # 24 hours
  refresh-expiration: 604800000 # 7 days

# CORS - Allow frontend during development  
app:
  cors:
    allowed-origins: http://localhost:3000,http://127.0.0.1:3000

# Enhanced logging for development
logging:
  level:
    com.nextgenrail: DEBUG
    org.springframework.security: DEBUG
    org.springframework.data.mongodb: INFO