# Development Dockerfile for IRCTC-Plus API
# Optimized for fast development with hot reload

FROM maven:3.9.4-openjdk-17-slim

# Install curl for health checks and development tools
RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy pom.xml and download dependencies (for better layer caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Expose port
EXPOSE 8080

# Enable Spring Boot DevTools for hot reload
ENV SPRING_DEVTOOLS_RESTART_ENABLED=true
ENV SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/api/actuator/health || exit 1

# Run the application with Spring Boot DevTools
CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.jvmArguments='-Xmx512m'"]